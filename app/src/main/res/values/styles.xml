<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorControlNormal">?attr/colorOnPrimary</item> <!-- Action Icons on Toolbar -->
    </style>

    <!--  Reference by Views (style)  -->

    <style name="AppWidget.Button.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/colorOnPrimary</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">?attr/colorSecondaryVariant</item>
    </style>

</resources>
